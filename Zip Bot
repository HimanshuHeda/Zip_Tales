            <!-- News Sources Panel (Hidden by default) -->
            <div id="sources-panel" class="hidden p-4 border-b border-gray-200 bg-white">
                <div class="flex items-center justify-between mb-2">
                    <h3 class="text-sm font-semibold text-gray-500">Select News Sources</h3>
                    <button id="apply-sources" class="text-xs bg-indigo-600 text-white px-2 py-1 rounded hover:bg-indigo-700 transition">
                        Apply Selection
                    </button>
