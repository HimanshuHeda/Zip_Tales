                    <button id="refresh-topics" class="text-xs text-indigo-600 hover:text-indigo-800 transition">
                        <i class="fas fa-sync-alt mr-1"></i>Refresh
                    </button>
                </div>
                <div class="flex flex-wrap gap-2">
                    <button class="topic-btn px-3 py-1 bg-indigo-100 text-indigo-800 text-xs rounded-full hover:bg-indigo-200 transition">Tech Trends</button>
                    <button class="topic-btn px-3 py-1 bg-indigo-100 text-indigo-800 text-xs rounded-full hover:bg-indigo-200 transition">Global Politics</button>
                    <button class="topic-btn px-3 py-1 bg-indigo-100 text-indigo-800 text-xs rounded-full hover:bg-indigo-200 transition">Financial Markets</button>
                    <button class="topic-btn px-3 py-1 bg-indigo-100 text-indigo-800 text-xs rounded-full hover:bg-indigo-200 transition">Climate Change</button>
                    <button class="topic-btn px-3 py-1 bg-indigo-100 text-indigo-800 text-xs rounded-full hover:bg-indigo-200 transition">Health & Science</button>
